
<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <ul><li style="color: red;font-size: 15px; text-align:left "><%= e %></li></ul>
  <% end %>
<% end %>

<div class="login_form">
        <h1>Login</h1>
        <%= form_with url:"/login" do |f| %> 
            <br>
            <%= f.label "User name"%><br> 
            <%= f.text_field :username , class: "input" %> 
            <br>
            <%= f.label "Password" %><br> 
            <%= f.password_field :password , class: "input"%> 
            <br>
            <br>
            <%= f.submit "Login" , class: "button"%>
        <% end %> 
       
<br><br>
<h4 class="home">First time user sign up here</h4>
<%= button_to "Sign Up", "/users/new", method: :get %>
</div>









